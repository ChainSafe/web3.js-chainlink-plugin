{
	"name": "@chainsafe/web3.js-chainlink-plugin",
	"version": "0.0.1",
	"description": "A Web3.js 4.x Plugin for Interacting With Chainlink Smart Contracts",
	"main": "dist/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ChainSafe/web3.js-chainlink-plugin.git"
	},
	"author": "ChainSafe Systems",
	"license": "LGPL-3.0",
	"private": false,
	"scripts": {
		"build": "tsc --build",
		"build:check": "node -e \"require('./dist')\"",
		"clean": "rimraf dist",
		"format": "prettier --write '**/*'",
		"lint": "eslint --ext .js,.ts .",
		"lint:fix": "eslint --fix --ext .js,.ts .",
		"prebuild": "rimraf dist",
		"prepare": "husky install",
		"postinstall": "yarn build",
		"test": "jest --config=./test/unit/jest.config.js",
		"test:ci": "jest --coverage=true --coverage-reporters=json --verbose",
		"test:coverage": "jest --config=./test/unit/jest.config.js --coverage=true --coverage-reporters=text",
		"test:unit": "jest --config=./test/unit/jest.config.js"
	},
	"devDependencies": {
		"@types/jest": "^28.1.6",
		"@types/node": "^18.7.23",
		"@typescript-eslint/eslint-plugin": "^5.30.7",
		"@typescript-eslint/parser": "^5.30.7",
		"eslint": "^8.20.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-deprecation": "^1.3.2",
		"eslint-plugin-header": "^3.1.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^27.0.4",
		"eslint-plugin-no-null": "^1.0.2",
		"eslint-plugin-tsdoc": "^0.2.17",
		"husky": "^8.0.1",
		"jest": "^28.1.3",
		"jest-extended": "^3.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"prettier-plugin-solidity": "^1.0.0-beta.24",
		"ts-jest": "^28.0.7",
		"ts-loader": "^9.4.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4",
		"web3": "5.0.0",
		"web3-core": "5.0.0",
		"web3-eth-abi": "5.0.0",
		"web3-eth-contract": "5.0.0",
		"web3-types": "5.0.0"
	},
	"peerDependencies": {
		"web3": ">= 4.0.1-alpha.0 < 5",
		"web3-core": ">= 4.0.1-alpha.0 < 5",
		"web3-eth-abi": ">= 4.0.1-alpha.0 < 5",
		"web3-eth-contract": ">= 4.0.1-alpha.0 < 5",
		"web3-types": ">= 0.1.1-alpha.0 < 5"
	}
}
